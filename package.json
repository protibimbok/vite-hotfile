{
  "name": "vite-hotfile",
  "version": "1.0.0",
  "description": "A Vite plugin that generates a `.hotfile` containing the development server URL.",
  "type": "module",
  "keywords": [
    "hotfile",
    "vite",
    "vite-plugin"
  ],
  "homepage": "https://github.com/protibimbok/vite-hotfile#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/protibimbok/vite-hotfile"
  },
  "license": "MIT",
  "author": {
    "name": "Sakibur Rahman Khan",
    "email": "sakib.saad.khan@gmail.com"
  },
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "main": "./dist/cjs/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "node ./scripts/build.js",
    "lint": "eslint --ext .ts ./src"
  },
  "devDependencies": {
    "@types/node": "^18.19.33",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "prettier": "^3.2.5",
    "tsc": "^2.0.4",
    "typescript": "^4.9.5",
    "vite": "^5.4.11"
  },
  "peerDependencies": {
    "vite": "^3.0.0 || ^4.0.0 || ^5.0.0"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee"
}
